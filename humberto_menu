            <script>
                const imagens = ['https://img.freepik.com/fotos-gratis/frasco-de-produto-de-beleza-perfumado-com-aroma-luxuoso-para-relaxamento-gerado-por-inteligencia-artificial_188544-90038.jpg','https://images.pexels.com/photos/1653085/pexels-photo-1653085.jpeg?auto=compress&cs=tinysrgb&w=600']
                let  currentImageIndex = 0;

                function changeImage() {
                    currentImageIndex = (currentImageIndex + 1) % imagens.length;
                    document.getElementById("imagens").src = imagens[currentImageIndex]
                }
            </script>
