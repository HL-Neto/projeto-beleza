                <script>
        
                    const imagens = ['https://production.na01.natura.com/on/demandware.static/-/Library-Sites-AvonBrazilSharedLibrary/default/dwfabbaf97/2024/05/06-05/banner-home-desconto-progressivo-dsk.jpg', 'https://production.na01.natura.com/on/demandware.static/-/Library-Sites-AvonBrazilSharedLibrary/default/dw112c440a/2024/05/13-05/banner-home-cupons-dsk.jpg', 'https://www.shutterstock.com/image-vector/fragrance-advertising-banner-template-glass-260nw-2147941849.jpg',]
                    let currentImageIndex = 0;
        
                    function changeImage(direcao) {
                        const direcaoMap = {
                            'anterior': -1,
                            'proximo': 1,
                        };
                        currentImageIndex = (currentImageIndex + direcaoMap[direcao] + imagens.length) % imagens.length;
                        document.getElementById("imagens").src = imagens[currentImageIndex];
                    }
        
                    function autoChangeImage() {
                        setInterval(() => {
                            changeImage('proximo');
                        }, 3000);
                    }
        
                    autoChangeImage();
        
                </script>
            </div>
